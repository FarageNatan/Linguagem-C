*EXERCICIO PARA CALCULAR OS DIAS VIVIDOS USANDO PONTEIRO*
#include <stdio.h>
#include <stdbool.h>
#include <ctype.h>
#include <stdlib.h>

int diasVividos(int *idade){
  int dias = *idade * 365;
  return dias;
}

void detIdade(int *idade){
  printf("Determine sua idade: ");
  scanf("%i", idade);
}

int main(){
  int Idade; 
  detIdade(&Idade);

  int dias;
  dias = diasVividos(&Idade);
  printf("Os dias vividos são %i", dias);

  return 0;
}
