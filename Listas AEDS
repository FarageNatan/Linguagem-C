#include <stdio.h>

void imprime_fibonacci(int n) {
    if (n >= 1) {
        static int anterior = 0, atual = 1;
        if (n == 1) {
            printf("%d ", anterior);
        } else if (n == 2) {
            printf("%d ", atual);
        } else {
            int proximo = anterior + atual;
            printf("%d ", proximo);
            anterior = atual;
            atual = proximo;
        }
        imprime_fibonacci(n - 1);
    }
}

int main() {
    int n;
    printf("Digite a quantidade de termos da sequencia de Fibonacci: ");
    scanf("%d", &n);
    imprime_fibonacci(n);
    return 0;
}

